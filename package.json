{
  "name": "league-rage",
  "description": "League TDM gamemode",
  "version": "0.7a",
  "license": "ISC",
  "scripts": {
    "install": "yarn install:core && yarn install:tdm && yarn install:cef && yarn install:ui && yarn install:lang && yarn install:statistics && yarn install:mapeditor && yarn install:mapeditor-ui",
    "install:core": "yarn --cwd ./core",
    "install:tdm": "yarn --cwd ./server/tdm",
    "install:cef": "yarn --cwd ./client/cef",
    "install:ui": "yarn --cwd ./client/ui",
    "install:lang": "yarn --cwd ./lang",
    "install:statistics": "yarn --cwd ./server/statistics",
    "install:mapeditor": "yarn --cwd ./server/mapeditor",
    "install:mapeditor-ui": "yarn --cwd ./client/mapeditor",
    "upgrade:all": "yarn upgrade:core && yarn upgrade:tdm && yarn upgrade:cef && yarn upgrade:ui && yarn upgrade:lang && yarn upgrade:statistics",
    "upgrade:core": "yarn upgrade --cwd ./core",
    "upgrade:tdm": "yarn upgrade --cwd ./server/tdm",
    "upgrade:cef": "yarn upgrade --cwd ./client/cef",
    "upgrade:ui": "yarn upgrade --cwd ./client/ui",
    "upgrade:lang": "yarn upgrade --cwd ./lang",
    "upgrade:statistics": "yarn upgrade --cwd ./server/statistics",
    "build": "yarn build:server && yarn build:client",
    "build:server": "yarn build:lang && yarn build:tdm && yarn build:statistics && yarn build:mapeditor",
    "build:client": "yarn build:ui && yarn build:cef && yarn build:mapeditor-ui && yarn build:client_packages",
    "build:tdm": "yarn --cwd ./server/tdm build:external",
    "build:statistics": "yarn --cwd ./server/statistics build:external",
    "build:mapeditor": "yarn --cwd ./server/mapeditor build:external",
    "build:lang": "yarn --cwd ./lang build:external",
    "build:ui": "yarn --cwd ./client/ui build:external",
    "build:cef": "yarn --cwd ./client/cef build:external",
    "build:mapeditor-ui": "yarn --cwd ./client/mapeditor build:external",
    "build:client_packages": "cp -R ./client/client_packages/index.js ../client_packages/index.js",
    "watch": "concurrently --kill-others \"yarn watch:tdm\" \"yarn watch:ui\" \"yarn watch:cef\" \"yarn watch:statistics\" \"yarn watch:mapeditor\" \"yarn watch:mapeditor-ui\"",
    "watch:server": "concurrently --kill-others \"yarn watch:tdm\" \"yarn watch:statistics\" \"yarn watch:mapeditor\"",
    "watch:client": "concurrently --kill-others \"yarn watch:ui\" \"yarn watch:cef\" \"yarn watch:mapeditor-ui\"",
    "watch:tdm": "yarn --cwd ./server/tdm watch:external",
    "watch:statistics": "yarn --cwd ./server/statistics watch:external",
    "watch:mapeditor": "yarn --cwd ./server/mapeditor watch:external",
    "watch:ui": "yarn --cwd ./client/ui watch:external",
    "watch:cef": "yarn --cwd ./client/cef watch:external",
    "watch:mapeditor-ui": "yarn --cwd ./client/mapeditor watch:external"
  },
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
